<style>
  .btn-search {
    background-color: #fe424d;
    color: white;
    padding: 0 1rem 0 1rem;
    border-radius: 25px;
  }
  .btn-search i{
    display: inline;
    margin-right: 0.5rem;
  }
  .btn-search:hover {
    background-color: #fe424d;
    color: white;
  }
  .search-input{
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
  }
</style>

<nav class="navbar navbar-expand-lg sticky-top top-0 border-bottom">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings">TravelLook</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input class="form-control me-2 search-input" type="search" placeholder="Search in TraverlLook" aria-label="Search">
          <button class="btn btn-search" type="submit"> <i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">TravelLook Home</a>
        <% if (!currentUser) { %>
          <!-- if the user is not login then will do show this part -->
          <a class="nav-link " aria-current="page" href="/signup"><b>SignUp</b></a>
          <a class="nav-link" href="/login"><b>login</b></a>
          <% } %>
            <% if (currentUser) { %>
              <!-- //if the user is login then only he will be able to see the logout option -->
              <a class="nav-link" href="/logout"><b>logout</b></a>
              <% } %>
      </div>

    </div>
  </div>
</nav>